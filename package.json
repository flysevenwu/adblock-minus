{
  "name": "adblock-minus",
  "version": "0.6.1",
  "description": "Implements core functionality of adblocking",
  "main": "bundle.js",
  "jsnext:main": "module.js",
  "files": [
    "bundle.js",
    "module.js",
    "lib/*.js"
  ],
  "engines": {
    "node": ">=6.4"
  },
  "scripts": {
    "test": "npm run lint && npm run spec",
    "build": "npm run chrome-vendor && browserify -e chrome/background.js -x url > build/app.js",
    "prebuild": "npm test && mkdir -p build && npm run chrome-manifest",
    "prepublish": "browserify --node -e module.js -s default > bundle.js",
    "chrome-manifest": "mustache package.json manifest.json > build/manifest.json",
    "chrome-vendor": "browserify -r url > build/vendor.js",
    "lint": "standard",
    "spec": "ava",
    "spec:watch": "ava --watch"
  },
  "keywords": [
    "adblock",
    "adblock-plus"
  ],
  "author": "xiaody",
  "license": "GPL-3.0",
  "repository": "xiaody/adblock-minus",
  "devDependencies": {
    "ava": "0.16.0",
    "babel-preset-es2015": "6.14.0",
    "babelify": "7.3.0",
    "browserify": "13.1.0",
    "mustache": "2.2.1",
    "standard": "8.0.0"
  },
  "babel": {
    "plugins": [
      "transform-es2015-modules-commonjs"
    ]
  },
  "browserify": {
    "transform": [
      "babelify"
    ]
  },
  "ava": {
    "require": [
      "babel-register"
    ]
  }
}
