{
  "name": "adblock-minus",
  "version": "0.5.0",
  "description": "Implements core functionality of adblocking",
  "main": "index.js",
  "engines": {
    "node": ">=6"
  },
  "scripts": {
    "test": "standard lib/*.js",
    "chrome-manifest": "mustache package.json manifest.json > build/manifest.json",
    "chrome-vendor": "browserify -r url > build/vendor.js",
    "prebuild": "npm test && mkdir -p build && npm run chrome-manifest",
    "build": "npm run chrome-vendor && browserify -e lib/Chrome.js -x url > build/app.js"
  },
  "keywords": [
    "adblock",
    "adblock-plus"
  ],
  "author": "xiaody",
  "license": "GPL-3.0",
  "repository": "xiaody/adblock-minus",
  "devDependencies": {
    "browserify": "13.1.0",
    "mustache": "2.2.1",
    "standard": "8.0.0"
  }
}
